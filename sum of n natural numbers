include <stdio.h>
int sum_of_n(int n) {
    return (n * (n + 1)) / 2;
}

int main() {
    int n;
    printf("Enter a positive integer: ");
    scanf("%d", &n);

    if (n < 1) {
        printf("Please enter a positive integer.");
        return 1;
    }

    int sum = sum_of_n(n);
    printf("Sum of first %d natural numbers: %d\n", n, sum);

    return 0;
}
